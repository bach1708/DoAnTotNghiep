@model List<MangaShop.Models.TheLoai>

@{
    ViewData["Title"] = "Quản lý thể loại";
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="~/css/NvbTheLoai-Index.css" />

<div class="container-admin-1600">
    @* Header *@
    <div class="d-flex justify-content-between align-items-center mb-4 mt-3">
        <div>
            <h2 class="page-title">DANH MỤC THỂ LOẠI</h2>
            <p class="text-muted small">Quản lý các nhóm thể loại truyện trên hệ thống</p>
        </div>
        <div class="header-actions">
            <a asp-action="Create" class="btn-add-new">
                <i class="fa-solid fa-plus me-2"></i> THÊM THỂ LOẠI
            </a>
            <a asp-controller="NvbAdmin" asp-action="Index" class="btn-back-square ms-2">
                <i class="fa-solid fa-arrow-left"></i>
            </a>
        </div>
    </div>

    @* Table Card *@
    <div class="table-card shadow-sm">
        <table class="table-custom">
            <thead>
                <tr>
                    <th style="width: 100px;">MÃ SỐ</th>
                    <th class="text-start">TÊN THỂ LOẠI</th>
                    <th style="width: 150px;">HÀNH ĐỘNG</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold text-muted">#@item.MaTheLoai</td>
                        <td class="text-start">
                            <span class="category-name">@item.TenTheLoai</span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.MaTheLoai" class="btn-edit-inline" title="Chỉnh sửa">
                                    <i class="fa-solid fa-pen-to-square"></i> SỬA
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>