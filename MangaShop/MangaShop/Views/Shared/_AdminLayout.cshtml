<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản Trị MangaShop</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    @* Render section Styles từ các trang con (như NvbHomeAdmin.css) *@
    @await RenderSectionAsync("Styles", required: false)

    <style>
        /* CSS bổ sung để đảm bảo body không có khoảng trắng thừa */
        body {
            background-color: #f0f2f5; /* Màu nền xám nhạt ngoài khung 1600px */
            margin: 0;
            padding: 0;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-dark bg-dark px-4 shadow-sm">
        <span class="navbar-brand fw-bold">
            <i class="fa-solid"></i> ADMIN PANEL
        </span>

        <div class="dropdown">
            <a class="dropdown-toggle text-decoration-none text-white"
               href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-solid fa-user-shield"></i>
                Xin chào, @Context.Session.GetString("AdminLogin")
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a class="dropdown-item text-danger" asp-controller="NvbAdmin" asp-action="Logout">
                        <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="admin-main-wrapper">
        <div class="container-fluid p-0">
            @RenderBody()
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>