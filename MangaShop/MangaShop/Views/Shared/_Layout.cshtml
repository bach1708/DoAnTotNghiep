<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MangaShop</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/MangaShop.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="manga-header">
        <div class="header-top">
            <div class="logo">
                <a asp-controller="NvbHome" asp-action="Home"><img src="/images/logo.png" alt="Manga Shop" style="height: 40px;"></a>
            </div>
            <div class="search-bar">
                <input type="text" placeholder="Nhập từ khóa tìm kiếm" />
                <button>Tìm ngay</button>
            </div>
            <div class="user-actions">

                @if (Context.Session.GetString("UserName") == null)
                {
                    <!-- CHƯA ĐĂNG NHẬP -->
                    <a asp-controller="NvbAccount" asp-action="Login">
                        <i class="fa-solid fa-user"></i> Tài Khoản
                    </a>
                }
                else
                {
                    <!-- ĐÃ ĐĂNG NHẬP -->
                    <div class="dropdown">
                        <a class="dropdown-toggle text-decoration-none"
                           href="#"
                           role="button"
                           data-bs-toggle="dropdown">

                            <i class="fa-solid fa-user"></i>
                            Xin chào, @Context.Session.GetString("UserName")
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="NvbAccount"
                                   asp-action="Logout">
                                    <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </div>
                }

                <a asp-controller="Cart" asp-action="GioHang" class="nav-link">
                    <i class="fa-solid fa-cart-shopping"></i> Giỏ Hàng
                </a>


            </div>

        </div>

        <nav class="main-nav">
            <ul>
                <li><a asp-controller="NvbHome" asp-action="DanhMuc">DANH MỤC</a></li>
                <li><a asp-controller="NvbHome" asp-action="LichPhatHanh">LỊCH PHÁT HÀNH</a></li>
                <li><a asp-controller="NvbHome" asp-action="ThanhVien">THÀNH VIÊN</a></li>
                <li><a href="#">ĐỔI ĐIỂM</a></li>
                <li><a asp-controller="NvbHome" asp-action="TinTuc">TIN TỨC</a></li>
                <li><a asp-controller="NvbHome" asp-action="HuongDan">HƯỚNG DẪN CẦN BIẾT</a></li>
                <li><a asp-controller="NvbHome" asp-action="VeChungToi">VỀ CHÚNG TÔI</a></li>
            </ul>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Liên hệ với chúng tôi - <a href="https://www.facebook.com/12TA014.00" target="_blank"> MangaShop </a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>