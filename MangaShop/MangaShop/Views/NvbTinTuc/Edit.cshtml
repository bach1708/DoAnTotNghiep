@model MangaShop.Models.ViewModels.BaiVietFormVM
@{
    ViewData["Title"] = "Sửa bài đăng";
    Layout = "_AdminLayout";
}

<h2 class="mb-3">✏️ SỬA BÀI ĐĂNG</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="card shadow p-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="MaBaiViet" />

    <div class="row">
        <div class="col-md-8">
            <div class="mb-3">
                <label class="form-label fw-bold">Tiêu đề</label>
                <input asp-for="TieuDe" class="form-control" placeholder="Nhập tiêu đề bài viết..." />
                <span asp-validation-for="TieuDe" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Tóm tắt</label>
                <textarea asp-for="TomTat" class="form-control" rows="2" placeholder="Mô tả ngắn gọn..."></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Nội dung</label>
                <textarea asp-for="NoiDung" class="form-control" rows="10"></textarea>
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label fw-bold d-block">Ảnh đại diện bài viết</label>
                <div class="image-edit-container mb-2">
                    @if (!string.IsNullOrWhiteSpace(Model.AnhDaiDienHienTai))
                    {
                        <img id="previewImg" src="~/images/baiviet/@Model.AnhDaiDienHienTai"
                             style="width:100%; height:200px; object-fit:cover" class="rounded border" />
                    }
                    else
                    {
                        <img id="previewImg" src="~/images/no-image.png"
                             style="width:100%; height:200px; object-fit:cover" class="rounded border" />
                    }
                </div>
                <input asp-for="AnhUpload" type="file" class="form-control" id="fileInput" accept="image/*" />
                <small class="text-muted">Nên chọn ảnh tỉ lệ 16:9</small>
            </div>

            <div class="card bg-light p-3">
                <div class="mb-3">
                    <label class="form-label fw-bold">Chuyên mục</label>
                    <select asp-for="Loai" class="form-select">
                        <option value="Thông báo">Thông báo</option>
                        <option value="Ưu đãi">Ưu đãi</option>
                    </select>
                </div>

                <div class="form-check form-switch mb-3">
                    <input asp-for="TrangThai" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label class="form-check-label fw-bold" for="flexSwitchCheckDefault">Hiển thị bài viết</label>
                </div>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-warning fw-bold">Cập nhật ngay</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại danh sách</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Hàm xem trước ảnh khi chọn file
        document.getElementById('fileInput').onchange = evt => {
            const [file] = document.getElementById('fileInput').files
            if (file) {
                document.getElementById('previewImg').src = URL.createObjectURL(file)
            }
        }
    </script>
}