@model MangaShop.Models.Truyen
@{
    ViewData["Title"] = "Chọn tập - " + Model.TenTruyen;
    var img = string.IsNullOrWhiteSpace(Model.AnhBia) ? "noimage.jpg" : Model.AnhBia;
}

@section Styles {
    <link rel="stylesheet" href="~/css/cart-chontap.css" asp-append-version="true" />
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-9">
            <div class="selection-card shadow-sm">
                <div class="row g-0">
                    <div class="col-md-5 selection-img-container">
                        <img src="~/images/@img" alt="@Model.TenTruyen" class="selection-img rounded" />
                    </div>

                    <div class="col-md-7 p-4">
                        <h3 class="mb-2 text-success fw-bold">@Model.TenTruyen</h3>
                        <p class="text-muted mb-3 small">
                            <i class="fa-solid fa-layer-group me-2"></i>Tùy chỉnh số lượng cho từng tập truyện
                        </p>

                        @if (Model.TruyenTaps == null || !Model.TruyenTaps.Any())
                        {
                            <div class="alert alert-secondary border-0">Chưa có dữ liệu tập cho truyện này.</div>
                            <a asp-controller="NvbHome" asp-action="ChiTiet" asp-route-id="@Model.MaTruyen" class="btn btn-outline-secondary w-100 mt-3">Quay lại</a>
                        }
                        else
                        {
                            var tatCaTaps = Model.TruyenTaps.OrderBy(x => x.SoTap).ToList();

                            <div class="select-all-box d-flex align-items-center mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="selectAll">
                                    <label class="form-check-label fw-bold text-success ms-2" for="selectAll" style="cursor:pointer">
                                        <i class="fa-solid fa-check-double me-1"></i> CHỌN TẤT CẢ TẬP
                                    </label>
                                </div>
                            </div>

                            <div class="tap-list-container mb-4">
                                @foreach (var tap in tatCaTaps)
                                {
                                    <div class="tap-item">
                                        <div class="form-check d-flex align-items-center flex-grow-1">
                                            @if (tap.SoLuongTon > 0)
                                            {
                                                <input class="form-check-input tap-checkbox me-3" type="checkbox"
                                                       value="@tap.MaTap" id="tap_@tap.MaTap" onchange="updateUI()">
                                                <label class="form-check-label w-100" for="tap_@tap.MaTap" style="cursor:pointer">
                                                    <span class="fw-bold d-block">Tập @tap.SoTap</span>
                                                    <span class="text-danger small">@tap.Gia.ToString("N0") ₫</span>
                                                    <span class="text-muted small ms-2">| Tồn: @tap.SoLuongTon</span>
                                                </label>
                                            }
                                            else
                                            {
                                                <input class="form-check-input me-3" type="checkbox" disabled>
                                                <label class="form-check-label text-muted italic small">
                                                    Tập @tap.SoTap - (Hết hàng)
                                                </label>
                                            }
                                        </div>

                                        @if (tap.SoLuongTon > 0)
                                        {
                                            <div class="quantity-control d-flex align-items-center bg-white border rounded">
                                                <button type="button" class="btn-qty" onclick="changeQty(@tap.MaTap, -1)">
                                                    <i class="fa-solid fa-minus"></i>
                                                </button>
                                                <input type="number" class="input-qty" id="qty_@tap.MaTap"
                                                       value="1" min="1" max="@tap.SoLuongTon"
                                                       onchange="validateQty(this, @tap.MaTap)">
                                                <button type="button" class="btn-qty" onclick="changeQty(@tap.MaTap, 1)">
                                                    <i class="fa-solid fa-plus"></i>
                                                </button>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>

                            <div class="price-summary mb-3 p-2 text-end">
                                <span class="text-muted">Đã chọn: <strong id="selectedCount" class="text-success">0</strong> tập</span>
                            </div>

                            <div class="d-grid gap-2">
                                <button class="btn btn-success btn-lg py-3 fw-bold shadow-sm" type="button" id="btnAddToCart" disabled>
                                    <i class="fa-solid fa-cart-plus me-2"></i>XÁC NHẬN THÊM
                                </button>
                                <a asp-controller="NvbHome" asp-action="ChiTiet" asp-route-id="@Model.MaTruyen" class="btn btn-link text-muted btn-sm">
                                    Hủy bỏ và quay lại
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script>
        // JS giữ nguyên logic gửi từng tập cho ổn định
        function changeQty(maTap, delta) {
            const input = document.getElementById('qty_' + maTap);
            const checkbox = document.getElementById('tap_' + maTap);
            let newVal = parseInt(input.value) + delta;
            if (newVal >= 1 && newVal <= parseInt(input.max)) {
                input.value = newVal;
                checkbox.checked = true;
                updateUI();
            }
        }

        function validateQty(input, maTap) {
            const checkbox = document.getElementById('tap_' + maTap);
            if (input.value < 1) input.value = 1;
            if (parseInt(input.value) > parseInt(input.max)) input.value = input.max;
            checkbox.checked = true;
            updateUI();
        }

        function updateUI() {
            const checkboxes = document.querySelectorAll('.tap-checkbox');
            const checkedBoxes = document.querySelectorAll('.tap-checkbox:checked');
            const selectAll = document.getElementById('selectAll');
            const btnSubmit = document.getElementById('btnAddToCart');
            const countDisplay = document.getElementById('selectedCount');

            countDisplay.innerText = checkedBoxes.length;
            btnSubmit.disabled = checkedBoxes.length === 0;
            if(selectAll) selectAll.checked = (checkedBoxes.length === checkboxes.length && checkboxes.length > 0);
        }

        document.addEventListener("DOMContentLoaded", function () {
            const selectAll = document.getElementById('selectAll');
            const checkboxes = document.querySelectorAll('.tap-checkbox');
            const btnSubmit = document.getElementById('btnAddToCart');

            if (selectAll) {
                selectAll.addEventListener('change', function () {
                    checkboxes.forEach(cb => cb.checked = this.checked);
                    updateUI();
                });
            }

            btnSubmit.addEventListener('click', async function () {
                const checkedBoxes = document.querySelectorAll('.tap-checkbox:checked');
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                btnSubmit.disabled = true;
                btnSubmit.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Đang xử lý...';

                for (let cb of checkedBoxes) {
                    const maTap = cb.value;
                    const qty = document.getElementById('qty_' + maTap).value;
                    let formData = new FormData();
                    formData.append("maTap", maTap);
                    formData.append("quantity", qty);
                    formData.append("__RequestVerificationToken", token);

                    try {
                        await fetch('@Url.Action("AddTap", "Cart")', { method: 'POST', body: formData });
                    } catch (e) { console.error("Lỗi:", e); }
                }
                window.location.href = '@Url.Action("GioHang", "Cart")';
            });
        });
    </script>
}