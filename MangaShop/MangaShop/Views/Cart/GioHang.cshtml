@model List<MangaShop.Models.CartItem>

@{
    ViewData["Title"] = "Giỏ hàng";
}

<h2 class="mb-4">🛒 Giỏ hàng của bạn</h2>
<a asp-controller="Bill"
   asp-action="BillUser"
   class="btn btn-secondary">
    📦 Đơn hàng đã mua
</a>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        Giỏ hàng đang trống
    </div>
}
else
{
    <table class="table table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Ảnh</th>
                <th>Tên truyện</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/images/@item.AnhBia" width="60" />
                    </td>

                    <td>
                        @item.TenTruyen
                        <span class="text-muted">(Tập @item.SoTap)</span>
                    </td>

                    <td>@item.Gia.ToString("N0") ₫</td>

                    <!-- SỐ LƯỢNG + - -->
                    <td>
                        <div class="d-flex align-items-center justify-content-center gap-1">
                            <a asp-controller="Cart"
                               asp-action="Decrease"
                               asp-route-id="@item.MaTap"
                               class="btn btn-sm btn-outline-secondary px-2">➖</a>

                            <form asp-controller="Cart" asp-action="UpdateQuantity" method="post" class="m-0">
                                <input type="hidden" name="id" value="@item.MaTap" />
                                <input type="number"
                                       name="quantity"
                                       value="@item.SoLuong"
                                       min="1"
                                       class="form-control form-control-sm text-center"
                                       style="width:42px; height:28px; padding:0;"
                                       onchange="this.form.submit()" />
                            </form>

                            <a asp-controller="Cart"
                               asp-action="Increase"
                               asp-route-id="@item.MaTap"
                               class="btn btn-sm btn-outline-secondary px-2">➕</a>
                        </div>
                    </td>

                    <!-- ✅ THÀNH TIỀN -->
                    <td class="text-danger fw-bold">
                        @((item.Gia * item.SoLuong).ToString("N0")) ₫
                    </td>

                    <!-- ✅ XÓA -->
                    <td>
                        <a asp-controller="Cart"
                           asp-action="Remove"
                           asp-route-id="@item.MaTap"
                           class="btn btn-sm btn-danger">
                            X
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

    <div class="d-flex justify-content-between">
        <a asp-controller="NvbHome"
           asp-action="DanhMuc"
           class="btn btn-secondary">
            ⬅ Tiếp tục mua
        </a>

        <a asp-controller="Checkout"
           asp-action="ThanhToan"
           class="btn btn-success">
            💳 Thanh toán
        </a>
    </div>
   
}
@section Scripts {
    <script>
        let qtyTimer;
        function queueQtySubmit(form) {
            clearTimeout(qtyTimer);
            qtyTimer = setTimeout(() => form.submit(), 400); // đợi 0.4s rồi submit
        }
    </script>
}
