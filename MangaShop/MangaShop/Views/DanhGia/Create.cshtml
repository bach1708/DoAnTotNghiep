@using MangaShop.Models
@{
    ViewData["Title"] = "Đánh giá truyện";
    int maTruyen = (int)ViewBag.MaTruyen;
    int maDonHang = (int)ViewBag.MaDonHang;

    var tapsDaMua = ViewBag.TapsDaMua as List<TruyenTap> ?? new List<TruyenTap>();
}

<h3 class="mb-3">Đánh giá truyện</h3>

@if (TempData["Err"] != null)
{
    <div class="alert alert-warning">@TempData["Err"]</div>
}
@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}

<form asp-controller="DanhGia" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="MaTruyen" value="@maTruyen" />
    <input type="hidden" name="MaDonHang" value="@maDonHang" />

    <!-- ✅ Chọn tập -->
    <div class="mb-3">
        <label class="form-label fw-semibold">Chọn tập bạn muốn đánh giá (đã mua trong đơn)</label>

        @if (!tapsDaMua.Any())
        {
            <div class="alert alert-warning mb-0">
                Không tìm thấy tập nào cho truyện này trong đơn hàng.
            </div>
        }
        else
        {
            <div class="border rounded p-3">
                <div class="d-flex flex-wrap gap-3">
                    @foreach (var t in tapsDaMua)
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="maTaps"
                                   value="@t.MaTap"
                                   id="tap_@t.MaTap"
                                   checked />
                            <label class="form-check-label" for="tap_@t.MaTap">
                                Tập @t.SoTap
                            </label>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Số sao -->
    <div class="mb-3">
        <label class="form-label">Số sao</label>
        <select name="SoSao" class="form-control" required>
            <option value="">-- Chọn số sao --</option>
            <option value="5">⭐⭐⭐⭐⭐ (5 sao)</option>
            <option value="4">⭐⭐⭐⭐ (4 sao)</option>
            <option value="3">⭐⭐⭐ (3 sao)</option>
            <option value="2">⭐⭐ (2 sao)</option>
            <option value="1">⭐ (1 sao)</option>
        </select>
    </div>

    <!-- Nội dung -->
    <div class="mb-3">
        <label class="form-label">Nội dung đánh giá</label>
        <textarea name="NoiDung" class="form-control" rows="4"
                  placeholder="Nhập cảm nhận của bạn..."></textarea>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Gửi đánh giá</button>

        <!-- ✅ Quay lại đơn hàng luôn đúng -->
        <a asp-controller="Bill"
           asp-action="BillDetail"
           asp-route-id="@maDonHang"
           class="btn btn-secondary ms-2">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
