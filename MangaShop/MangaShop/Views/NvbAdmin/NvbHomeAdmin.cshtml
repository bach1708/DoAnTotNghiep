@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout"; // 👉 dùng layout riêng cho Admin
}

<h2 class="mb-4">Trang quản trị Manga Shop</h2>

<div class="row g-4">

    <!-- QUẢN LÝ TRUYỆN -->
    <div class="col-md-3">
        <div class="card text-center shadow h-100">
            <div class="card-body">
                <h5 class="card-title">Quản Lý Truyện</h5>
                <a asp-controller="NvbTruyen"
                   asp-action="Index"
                   class="btn btn-outline-primary btn-sm mt-2">
                    Xem
                </a>
            </div>
        </div>
    </div>

    <!-- QUẢN LÝ THỂ LOẠI -->
    <div class="col-md-3">
        <div class="card text-center shadow h-100">
            <div class="card-body">
                <h5 class="card-title">Quản Lý Thể Loại</h5>

                <a asp-controller="NvbTheLoai"
                   asp-action="Index"
                   class="btn btn-outline-success btn-sm mt-2">
                   Xem
                </a>
            </div>
        </div>
    </div>

    <!-- ĐƠN HÀNG -->
    <div class="col-md-3">
        <div class="card text-center shadow h-100">
            <div class="card-body">
                <h5 class="card-title">Quản Lý Đơn Hàng</h5>
                <a asp-controller="BillAdmin"
                   asp-action="BillAdmin"
                   class="btn btn-outline-warning btn-sm mt-2">
                    Xem
                </a>
                    

            </div>
        </div>
    </div>

    <!-- ĐĂNG XUẤT -->
    <div class="col-md-3">
        <div class="card text-center shadow h-100 border-danger">
            <div class="card-body">
                <h5 class="card-title text-danger">Quản Lý Đánh Giá</h5>

                <a asp-controller="NvbDanhGiaAdmin"
                   asp-action="Index"
                   class="btn btn-outline-danger btn-sm mt-2">
                    Xem đánh giá
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow h-100 border-primary">
            <div class="card-body">
                <h5 class="card-title text-primary">Quản lý khách hàng</h5>

                <a asp-controller="QuanLyKhachHang"
                   asp-action="Index"
                   class="btn btn-outline-primary btn-sm mt-2">
                    Vào quản lý
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow h-100 border-dark">
            <div class="card-body">
                <h5 class="card-title">Thống kê doanh thu</h5>
                <a asp-controller="NvbThongKe" asp-action="Index"
                   class="btn btn-outline-dark btn-sm mt-2">
                    Xem thống kê
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow h-100 border-primary">
            <div class="card-body">
                <h5 class="card-title text-primary">Quản lý bài đăng</h5>
                <a asp-controller="NvbTinTuc" asp-action="Index"
                   class="btn btn-outline-primary btn-sm mt-2">
                    Vào quản lý
                </a>
            </div>
        </div>
    </div>

</div>
