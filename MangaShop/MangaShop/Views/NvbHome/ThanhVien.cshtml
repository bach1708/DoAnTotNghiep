@{
    ViewData["Title"] = "Ưu Đãi Thành Viên";
}
<div class="container mt-5 mb-5">

    <div class="text-center mb-5">
        <h1 class="member-title">✨ KHÁCH HÀNG THÂN THIẾT MANGA SHOP ✨</h1>
        <p class="lead">Cùng khám phá các cấp độ thành viên và ưu đãi độc quyền dành cho bạn!</p>
    </div>

    <div class="row member-tiers">

        <div class="col-md-4">
            <div class="card member-card silver-tier">
                <div class="card-body text-center">
                    <h2 class="card-title">🥈 THÀNH VIÊN BẠC</h2>
                    <p class="card-text">
                        Đạt được khi tổng chi tiêu từ 500.000₫ trở lên.
                    </p>
                    <hr>
                    <ul class="rewards-list">
                        <li>⭐ Chiết khấu 3% cho mọi đơn hàng.</li>
                        <li>⭐ Tích 1 điểm đổi thưởng cho mỗi 10.000₫.</li>
                    </ul>
                </div>
            </div>
        </div>


        <div class="col-md-4">
            <div class="card member-card gold-tier">
                <div class="card-body text-center">
                    <h2 class="card-title">🥇 THÀNH VIÊN VÀNG</h2>
                    <p class="card-text">
                        Đạt được khi tổng chi tiêu từ 2.000.000₫ trở lên.
                    </p>
                    <hr>
                    <ul class="rewards-list">
                        <li>👑 Chiết khấu 5% cho mọi đơn hàng.</li>
                        <li>👑 Tích 1.5 điểm đổi thưởng cho mỗi 10.000₫.</li>
                        <li>👑 Quà tặng sinh nhật độc quyền.</li>
                    </ul>
                </div>
            </div>
        </div>


        <div class="col-md-4">
            <div class="card member-card diamond-tier">
                <div class="card-body text-center">
                    <h2 class="card-title">💎 THÀNH VIÊN KIM CƯƠNG</h2>
                    <p class="card-text">
                        Đạt được khi tổng chi tiêu từ 5.000.000₫ trở lên.
                    </p>
                    <hr>
                    <ul class="rewards-list">
                        <li>💎 Chiết khấu 8% cho mọi đơn hàng.</li>
                        <li>💎 Tích 2 điểm đổi thưởng cho mỗi 10.000₫.</li>
                        <li>💎 Miễn phí vận chuyển cho đơn hàng trên 300.000₫.</li>
                    </ul>
                </div>
            </div>
        </div>

    </div>

    <div class="text-center mt-5">
        <a asp-controller="NvbAccount" asp-action="Login" class="btn btn-lg btn-success register-btn">
             ĐĂNG KÝ/ĐĂNG NHẬP NGAY ĐỂ TÍCH ĐIỂM</a>
    </div>

</div>

@section Styles {
    <link rel="stylesheet" href="~/css/ThanhVien.css" asp-append-version="true" />
}