@model List<MangaShop.Models.Truyen>


@{
    ViewData["Title"] = "Danh mục truyện tranh";
    var theLoai = ViewBag.TheLoai as List<TheLoai>;
    int? maTheLoai = ViewBag.MaTheLoai as int?;
}

<div class="container mt-4">

    <img src="~/images/collection_image.jpg" alt="Danh mục truyện tranh" class="img-fluid mb-4 rounded" style="width:100%; max-height:auto; object-fit:cover;" />

    <div class="row">
        <!-- CỘT TRÁI: THỂ LOẠI -->
        <div class="col-md-3">
            <h5>Thể loại</h5>
            <ul class="list-group">
                <li class="list-group-item @(maTheLoai == null ? "active" : "")">
                    <a asp-action="DanhMuc"
                       class="text-decoration-none text-dark d-block">
                        Tất cả
                    </a>
                </li>

                @foreach (var tl in theLoai)
                {
                    <li class="list-group-item @(maTheLoai == tl.MaTheLoai ? "active" : "")">
                        <a asp-action="DanhMuc"
                           asp-route-maTheLoai="@tl.MaTheLoai"
                           class="text-decoration-none text-dark d-block">
                            @tl.TenTheLoai
                        </a>
                    </li>
                }
            </ul>
        </div>

        <!-- CỘT PHẢI: DANH SÁCH TRUYỆN -->
        <div class="col-md-9">

            <div class="row g-4">

                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">

                            <img src="~/images/@item.AnhBia"
                                 class="card-img-top"
                                 style="height:260px; object-fit:cover" />

                            <div class="card-body text-center">
                                <h6 class="card-title">@item.TenTruyen</h6>

                                <p class="text-danger fw-bold">
                                    @item.Gia.ToString("N0") ₫
                                </p>
                                <a asp-action="ChiTiet"
                                   asp-route-id="@item.MaTruyen"
                                   asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)"
                                   class="btn btn-outline-primary w-100 mb-2">
                                    👁 Truyện này có gì?
                                </a>
                            </div>
                        </div>
                    </div>
                }

                @if (!Model.Any())
                {
                    <div class="col-12">
                        <div class="alert alert-warning text-center">
                            Không có truyện trong danh mục này
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/DanhMuc.css" asp-append-version="true" />
}
