@model List<MangaShop.Models.BaiViet>

@{
    ViewData["Title"] = "Tin tức";
    var loai = ViewBag.Loai as string;
}

<h2 class="mb-3">📰 Tin tức & Ưu đãi</h2>

<div class="d-flex gap-2 mb-3">
    <a asp-action="TinTuc" class="btn btn-outline-dark btn-sm @(string.IsNullOrEmpty(loai) ? "active" : "")">Tất cả</a>
    <a asp-action="TinTuc" asp-route-loai="Thông báo" class="btn btn-outline-primary btn-sm @(loai == "Thông báo" ? "active" : "")">Thông báo</a>
    <a asp-action="TinTuc" asp-route-loai="Ưu đãi" class="btn btn-outline-success btn-sm @(loai == "Ưu đãi" ? "active" : "")">Ưu đãi</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Chưa có bài đăng nào.</div>
}
else
{
    <div class="row g-3">
        @foreach (var b in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow h-100">
                    @if (!string.IsNullOrWhiteSpace(b.AnhDaiDien))
                    {
                        <img src="~/images/@b.AnhDaiDien" class="card-img-top" style="height:180px; object-fit:cover;" />
                    }
                    <div class="card-body">
                        <span class="badge @(b.Loai == "Ưu đãi" ? "bg-success" : "bg-primary")">
                            @b.Loai
                        </span>

                        <h5 class="card-title mt-2">@b.TieuDe</h5>
                        <p class="text-muted mb-2">@b.NgayDang.ToString("dd/MM/yyyy HH:mm")</p>

                        <p class="card-text">
                            @(string.IsNullOrWhiteSpace(b.TomTat) ? (b.NoiDung.Length > 120 ? b.NoiDung.Substring(0, 120) + "..." : b.NoiDung) : b.TomTat)
                        </p>

                        <a asp-action="TinTucChiTiet" asp-route-id="@b.MaBaiViet" class="btn btn-sm btn-dark">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
