@model IEnumerable<MangaShop.Models.ViewModels.LichItem>

<div class="container mt-4">
    <h2 class="text-center mb-4 text-primary">LỊCH PHÁT HÀNH THÁNG @ViewBag.ThangHienTai</h2>

    <div class="table-responsive">
        <table class="table table-hover table-striped border">
            <thead class="bg-success text-white">
                <tr>
                    <th style="width: 12%">Ngày đăng</th>
                    <th>Tên Truyện</th>
                    <th style="width: 8%">Tập</th>
                    <th style="width: 15%">Ngày phát hành</th>
                    <th style="width: 12%">Giá dự kiến</th>
                    <th>Ghi chú</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-muted" style="font-size: 0.9em;">@item.NgayDang</td>
                            <td>
                                <a href="@item.LinkChiTiet" class="text-dark font-weight-bold text-decoration-none">
                                    @item.TenTruyen
                                </a>
                            </td>
                            <td class="text-center">@item.Tap</td>
                            <td class="font-weight-bold text-success">@item.NgayPhatHanh</td>
                            <td class="text-danger font-weight-bold">@item.Gia</td>
                            <td class="font-italic">@item.GhiChu</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Hiện chưa có lịch phát hành mới.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>