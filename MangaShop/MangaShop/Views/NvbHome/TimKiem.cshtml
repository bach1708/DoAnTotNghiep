@model List<MangaShop.Models.Truyen>

@{
    ViewData["Title"] = "Tìm kiếm";
}

<div class="container mt-4">
    <h3 class="mb-2">🔎 Kết quả tìm kiếm</h3>
    <p class="text-muted">
        Từ khóa: <b>@ViewBag.Keyword</b> — Tìm thấy <b>@ViewBag.Count</b> truyện
    </p>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            Không tìm thấy truyện phù hợp. Bạn thử từ khóa khác nhé.
        </div>

        <a asp-controller="NvbHome" asp-action="DanhMuc" class="btn btn-secondary">
            ⬅ Quay lại danh mục
        </a>
    }
    else
    {
        <div class="row g-3">
            @foreach (var t in Model)
            {
                <div class="col-6 col-md-3">
                    <div class="card h-100 shadow-sm">
                        <a asp-controller="NvbHome" asp-action="ChiTiet" asp-route-id="@t.MaTruyen">
                            <img src="~/images/@t.AnhBia"
                                 class="card-img-top"
                                 style="height:220px; object-fit:cover" />
                        </a>

                        <div class="card-body">
                            <h6 class="card-title mb-1" style="min-height:38px">
                                @t.TenTruyen
                            </h6>
                            <div class="text-muted" style="font-size:13px">
                                Thể loại: @(t.MaTheLoaiNavigation?.TenTheLoai ?? "—")
                            </div>

                            <div class="mt-2 text-danger fw-bold">
                                @(t.Gia.ToString("N0")) ₫
                            </div>
                        </div>

                        <div class="card-footer bg-white border-0">
                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@t.MaTruyen"
                               class="btn btn-sm btn-success w-100">
                                Thêm vào giỏ
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
