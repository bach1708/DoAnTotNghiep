@model List<MangaShop.Models.Truyen>
@{
    ViewData["Title"] = "Tìm kiếm";
}

<link rel="stylesheet" href="~/css/NvbHome-TimKiem.css" />

<div class="container mt-4 mb-5">
    <div class="weekly-title text-center">
        <h3 class="weekly-heading">🔎 Kết quả tìm kiếm</h3>

        <p class="weekly-sub">
            Từ khóa: <b>@ViewBag.Keyword</b> — Tìm thấy <b>@ViewBag.Count</b> truyện
        </p>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            Không tìm thấy truyện phù hợp. Bạn thử từ khóa khác nhé.
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var t in Model)
            {
                <div class="col-6 col-md-3">
                    <div class="weekly-card">
                        <a asp-controller="NvbHome" asp-action="ChiTiet" asp-route-id="@t.MaTruyen" class="weekly-name">
                            @t.TenTruyen
                        </a>

                        <div class="weekly-price">
                            <span class="price-new">@(t.Gia.ToString("N0"))₫</span>
                        </div>

                        <div class="weekly-img">
                            <a asp-controller="NvbHome" asp-action="ChiTiet" asp-route-id="@t.MaTruyen">
                                <img src="~/images/@t.AnhBia" alt="@t.TenTruyen" />
                            </a>
                        </div>

                        <a asp-controller="Cart" asp-action="ChonTap" asp-route-id="@t.MaTruyen" class="weekly-btn">
                            🛒 Thêm vào giỏ
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>