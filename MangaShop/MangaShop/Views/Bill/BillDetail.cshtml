@model List<MangaShop.Models.ChiTietDonHang>

@{
    var donHang = ViewBag.DonHang as MangaShop.Models.DonHang;
    var daDanhGiaIds = ViewBag.DaDanhGiaIds as HashSet<int> ?? new HashSet<int>();

    ViewData["Title"] = "Chi tiết đơn hàng";
}

@if (donHang == null)
{
    <div class="alert alert-danger">Không tìm thấy đơn hàng.</div>
    <a asp-action="BillUser" class="btn btn-secondary">← Quay lại danh sách</a>
    return;
}

<h2 class="mb-3">🧾 CHI TIẾT ĐƠN HÀNG #@donHang.MaDonHang</h2>

<p>
    <strong>Ngày đặt:</strong> @donHang.NgayDat?.ToString("dd/MM/yyyy HH:mm")
</p>
<p>
    <strong>Trạng thái:</strong>
    <span class="badge bg-primary">@donHang.TrangThai</span>
</p>

<table class="table table-bordered align-middle text-center">
    <thead class="table-dark">
        <tr>
            <th>Ảnh</th>
            <th>Sản phẩm</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width:120px">
                    <img src="~/images/@item.MaTruyenNavigation?.AnhBia"
                         style="width:70px; height:90px; object-fit:cover" />
                </td>

                <td class="text-start">
                    <div class="fw-semibold">@item.MaTruyenNavigation?.TenTruyen</div>

                    @* ✅ Hiển thị tập đã mua *@
                    @if (item.MaTapNavigation != null)
                    {
                        <div class="small text-muted">
                            Tập đã mua: <b>@item.MaTapNavigation.SoTap</b>
                        </div>
                    }
                    else
                    {
                        <div class="small text-muted">
                            (Đơn này không lưu thông tin tập)
                        </div>
                    }
                </td>

                <td>@item.DonGia.ToString("N0") ₫</td>
                <td>@item.SoLuong</td>
                <td class="text-danger fw-bold">
                    @((item.DonGia * item.SoLuong).ToString("N0")) ₫
                </td>
            </tr>

            <tr>
                <td colspan="5" class="text-start bg-light">
                    @if (donHang.TrangThai == "Hoàn thành")
                    {
                        if (!daDanhGiaIds.Contains(item.MaTruyen))
                        {
                            <a asp-controller="DanhGia"
                               asp-action="Create"
                               asp-route-maTruyen="@item.MaTruyen"
                               asp-route-maDonHang="@donHang.MaDonHang"
                               class="btn btn-sm btn-warning">
                                ⭐ Thêm đánh giá
                            </a>
                        }
                        else
                        {
                            <span class="text-success fw-semibold">✅ Bạn đã đánh giá truyện này</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">
                            Bạn chỉ có thể đánh giá khi đơn hàng <b>Hoàn thành</b>.
                        </span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end mt-3">
    <h4>
        Tổng tiền:
        <span class="text-danger fw-bold">@donHang.TongTien.ToString("N0") ₫</span>
    </h4>
</div>

<a asp-action="BillUser" class="btn btn-secondary mt-3">
    ← Quay lại danh sách
</a>
