@model List<MangaShop.Models.ViewModels.NhapKhoVM>

@{
    ViewData["Title"] = "Nhập kho";
    Layout = "_AdminLayout";
}

<h2 class="mb-4">📦 Nhập thêm số lượng truyện</h2>
<p class="text-muted">Bấm vào từng truyện để mở phần nhập số lượng.</p>

<form asp-action="NhapKho" method="post">
    <div class="accordion" id="nhapKhoAccordion">

        @for (int i = 0; i < Model.Count; i++)
        {
            var collapseId = $"collapse_{i}";
            var headingId = $"heading_{i}";

            <div class="accordion-item mb-2">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button collapsed"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#@collapseId"
                            aria-expanded="false"
                            aria-controls="@collapseId">

                        <!-- Header: hiển thị tên truyện + tồn kho -->
                        <div class="d-flex align-items-center gap-3 w-100">
                            <img src="~/images/@Model[i].AnhBia"
                                 style="width:45px; height:60px; object-fit:cover; border-radius:6px;" />

                            <div class="flex-grow-1">
                                <div class="fw-semibold">@Model[i].TenTruyen</div>
                                <div class="small text-muted">
                                    Tồn kho hiện tại: <b class="text-success">@Model[i].SoLuongTon</b>
                                </div>
                            </div>

                            <!-- badge -->
                            @if (Model[i].SoLuongTon <= 0)
                            {
                                <span class="badge bg-danger">Hết hàng</span>
                            }
                            else if (Model[i].SoLuongTon <= 5)
                            {
                                <span class="badge bg-warning text-dark">Sắp hết</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Còn hàng</span>
                            }
                        </div>
                    </button>
                </h2>

                <div id="@collapseId"
                     class="accordion-collapse collapse"
                     aria-labelledby="@headingId"
                     data-bs-parent="#nhapKhoAccordion">
                    <div class="accordion-body">

                        <!-- hidden key -->
                        <input type="hidden" asp-for="@Model[i].MaTruyen" />

                        <div class="row align-items-center g-3">
                            <div class="col-md-6">
                                <label class="form-label mb-1">Số lượng nhập thêm</label>

                                <div class="input-group" style="max-width:240px;">
                                    <button type="button"
                                            class="btn btn-outline-secondary"
                                            onclick="changeQty(@i, -1)">
                                        −
                                    </button>

                                    <input asp-for="@Model[i].SoLuongNhap"
                                           type="number"
                                           class="form-control text-center"
                                           min="0"
                                           value="0"
                                           id="qty_@i" />

                                    <button type="button"
                                            class="btn btn-outline-secondary"
                                            onclick="changeQty(@i, 1)">
                                        +
                                    </button>
                                </div>

                                <div class="form-text">
                                    Nhập 0 nếu không nhập thêm.
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="alert alert-info mb-0">
                                    <b>Gợi ý:</b> Bạn có thể mở nhiều truyện và nhập số lượng rồi bấm <b>Lưu nhập kho</b> một lần.
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-success btn-lg">
            💾 Lưu nhập kho
        </button>

        <a asp-action="Index" class="btn btn-secondary btn-lg">
            Quay lại
        </a>
    </div>
</form>

@section Scripts {
    <script>
        function changeQty(index, value) {
            const input = document.getElementById("qty_" + index);
            const current = parseInt(input.value || "0", 10);
            let newVal = current + value;
            if (newVal < 0) newVal = 0;
            input.value = newVal;
        }
    </script>
}
